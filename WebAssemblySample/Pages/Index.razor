@page "/"

    <BlazorTabulator.Tabulator tableData="@sampleData">
        <BlazorTabulator.Data.TabulatorColumnData field="scientificName" title="Scientific Name"></BlazorTabulator.Data.TabulatorColumnData>
        <BlazorTabulator.Data.TabulatorColumnData field="commonName" title="Common Name"></BlazorTabulator.Data.TabulatorColumnData>
    </BlazorTabulator.Tabulator>

@code {

    private TabulatorData sampleData = new TabulatorData()
    {
        // This could be an API call instead of hardcoded values.
        Dataset = new List<JumpingSpider>() {
            new JumpingSpider() { ScientificName = "Anasaitis canosa", CommonName = "Twin-Flagged Jumping Spider" },
            new JumpingSpider() {  ScientificName = "Phidippus regius", CommonName = "Regal Jumping Spider" }
        }
    };
}

